<% if @users.any? %>
  <ul class="media-list">
    <% @users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
        <div class = kouza>
        <p>口座番号:<%= user.bankaccount %></p>
        <p>口座名義:<%= user.bankaccount_name %></p>
        <p>フリガナ:<%= user.bankaccount_kananame %></p>
        <p>金融機関名:<%= user.kinyuu_name %></p>
        <p>支店名:<%= user.siten_name %></p>
        </div>
        <p><%= link_to "支払い完了", usersinnseis_path(user_id: user.id), method: :post,  class: 'btn btn-success btn-xs' %>
       <P><%= @discontents_count[user.id] %>件</P> 
      </li>
      
    <% end %>
  </ul>
  <%= paginate @users %>
<% end %>